# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/real_estate_db
POSTGRES_DB=real_estate_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# API Keys
HOUSECANARY_API_KEY=your-housecanary-api-key
ATTOM_API_KEY=your-attom-api-key
ZILLOW_API_KEY=your-zillow-api-key
RENTCAST_API_KEY=your-rentcast-api-key
CLEAR_CAPITAL_API_KEY=your-clear-capital-api-key

# Logging
LOG_LEVEL=INFO

# Email Configuration (for alerts)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
ALERT_EMAIL=alerts@yourdomain.com

# Security
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://redis:6379/0
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STRATEGY=fixed-window 